<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="14" author="Jakub">
        <createTable tableName="homework_answer">
            <column autoIncrement="true" name="homework_answer_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="homeworks_pkey"/>
            </column>
            <column name="message" type="VARCHAR(255)">
            </column>
            <column name="homework" type="BIGINT">
            </column>
            <column name="student" type="BIGINT">
            </column>
            <column name="grade" type="VARCHAR(255)">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>