<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="13" author="Jakub">
        <createTable tableName="message_files">
            <column autoIncrement="true" name="file_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="message_file_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file" type="LONGBLOB">
                <constraints nullable="false"/>
            </column>
            <column name="message_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>